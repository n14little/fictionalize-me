{
  "name": "fictionalize-me-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": " TZ=UTC npm run db:start && TZ=UTC npm run db:migrate && TZ=UTC next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:start": "docker compose up -d postgres && npm run db:migrate",
    "db:migrate": "./db-migrate.sh",
    "type-check": "tsc",
    "check": "concurrently \"npm run lint\" \"npm run type-check\" \"npm run format:check\"",
    "e2e": "playwright test",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "e2e:report": "playwright show-report",
    "e2e:ui": "playwright test --ui",
    "e2e:ci": "npx playwright install --with-deps && npm run e2e",
    "test:unit": "TZ=UTC vitest run",
    "test:unit:watch": "TZ=UTC vitest",
    "test:unit:coverage": "TZ=UTC vitest run --coverage",
    "test:integration": "TZ=UTC NODE_ENV=test vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "TZ=UTC NODE_ENV=test vitest --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/line": "^0.99.0",
    "@nivo/pie": "^0.99.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tiptap/extension-image": "^2.11.7",
    "@tiptap/extension-link": "^2.11.7",
    "@tiptap/html": "^2.11.7",
    "@tiptap/pm": "^2.11.7",
    "@tiptap/react": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "@types/dompurify": "^3.0.5",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.5",
    "html-sanitize": "^1.1.5",
    "isomorphic-dompurify": "^2.24.0",
    "next": "15.3.3",
    "next-auth": "^4.24.11",
    "pg": "^8.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@types/next": "^8.0.7",
    "@types/node": "^20.19.0",
    "@types/pg": "^8.11.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.2",
    "chance": "^1.1.13",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.2"
  }
}
